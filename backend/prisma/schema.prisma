generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  role      String   @default("user")
  xp        Int      @default(0)
  level     Int      @default(1)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tasks     Task[]
}

model Task {
  id          String    @id @default(uuid())
  title       String
  description String?
  xp          Int       @default(10)
  gainedXp    Int?      // XP gagnée une fois terminée
  
  completed   Boolean   @default(false)
  completedAt DateTime?
  timeSpent   Int?      // En minutes
  
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId      String
}